package LinkedList;

public interface LinkedList {

	LinkedList add(Node node);
	LinkedList addBefore(Node node, int position);
	LinkedList remove(Node node);
	LinkedList removeAtPosition(int position) throws IndexOutOfBoundsException;
	LinkedList addFirst(Node node);
	LinkedList reverse(Node head);
	LinkedList recursiveReverse(Node head);
	Node peek();
	Node getNodeAtPosition(int position) throws IndexOutOfBoundsException;
	
}

package linkedList;

public interface LinkedList {

	LinkedList add(Node head, int value);
	LinkedList addBefore(Node head, int value, int position);
	LinkedList remove(Node head, Node node);
	LinkedList removeAtPosition(Node head, int position) throws IndexOutOfBoundsException;
	LinkedList addFirst(Node head, int value);
	LinkedList reverse(Node head);
	LinkedList recursiveReverse(Node head);
	Node peek();
	Node getNodeAtPosition(int position) throws IndexOutOfBoundsException;
	
}
